<android.support.v4.widget.DrawerLayout
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:id="@+id/drawer_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        android:orientation="vertical"
        android:id="@+id/content_frame">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <include
                android:id="@+id/app_bar2"
                layout="@layout/app_bar" />
            <!--custom layout starts-->
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:id="@+id/ROVimageView"
                android:src="@drawable/startup_screen"
                android:layout_marginTop="48dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="ROV name"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:text="Delphinus"
                android:textSize="36dp"
                android:singleLine="true"
                android:maxLines="1"
                android:id="@+id/rovNameEditText" />


            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp">
                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:text="Number of Motors"
                    android:textSize="18dp"
                    android:layout_weight="30"
                    android:gravity="center_vertical|center_horizontal"/>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="6"
                    android:text="-"
                    style="?android:attr/borderlessButtonStyle"
                    android:textColor="@android:color/holo_blue_dark"
                    android:id="@+id/motorMinus"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:layout_marginRight="12dp"
                    android:layout_marginLeft="12dp"
                    android:layout_weight="0.000001"
                    android:id="@+id/motorNumTextView"/>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="6"
                    android:text="+"
                    style="?android:attr/borderlessButtonStyle"
                    android:textColor="@android:color/holo_blue_dark"
                    android:id="@+id/motorPlus"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:layout_weight="0.1">
                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:text="Number of Sensors"
                    android:textSize="18dp"
                    android:layout_weight="30"
                    android:gravity="center_vertical|center_horizontal"/>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="6"
                    android:text="-"
                    style="?android:attr/borderlessButtonStyle"
                    android:textColor="@android:color/holo_blue_dark"
                    android:id="@+id/sensorMinus"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:layout_marginRight="12dp"
                    android:layout_marginLeft="12dp"
                    android:layout_weight="0.000001"
                    android:id="@+id/sensorNumTextView"/>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="6"
                    android:text="+"
                    style="?android:attr/borderlessButtonStyle"
                    android:textColor="@android:color/holo_blue_dark"
                    android:id="@+id/sensorPlus"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="32dp"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:layout_weight="0.1">
                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:text="Number of Payload Tools"
                    android:textSize="18dp"
                    android:layout_weight="30"
                    android:gravity="center_vertical|center_horizontal"/>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="6"
                    android:text="-"
                    style="?android:attr/borderlessButtonStyle"
                    android:textColor="@android:color/holo_blue_dark"
                    android:id="@+id/payloadMinus"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:layout_marginRight="12dp"
                    android:layout_marginLeft="12dp"
                    android:layout_weight="0.000001"
                    android:id="@+id/payloadNumTextView"/>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="6"
                    android:text="+"
                    style="?android:attr/borderlessButtonStyle"
                    android:textColor="@android:color/holo_blue_dark"
                    android:id="@+id/payloadPlus"/>

            </LinearLayout>


            <!--custom layout end-->
        </LinearLayout>
    </FrameLayout>

    <ListView
        android:id="@+id/left_drawer"
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:choiceMode="singleChoice"
        android:divider="@android:color/transparent"
        android:dividerHeight="0dp"
        android:background="@android:color/white" />


</android.support.v4.widget.DrawerLayout>
