<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.rov.pcms.make_rov.SensorInitialization"
    android:orientation="vertical"
    android:background="#FFFDE7">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginBottom="84dp">
        <include
            android:id="@+id/app_bar2"
            layout="@layout/app_bar" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="16dp"
            android:text="@string/sensorInitIntroduction"
            />

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/sensorInitSpinner"
            android:layout_margin="16dp"

            />

        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"
            android:layout_margin="8dp"
            android:layout_marginBottom="48dp" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="16dp"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:text="Sensor Name"
                    android:textColor="@color/accentColor"
                    android:layout_gravity="bottom" />

                <EditText
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    android:hint="Sensor Name"
                    android:id="@+id/sensorNameEditText" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="16dp"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:text="Sensor Type"
                    android:textColor="@color/accentColor"
                    android:layout_gravity="bottom" />

                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/sensorTypeSpinner"
                    android:layout_marginTop="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginLeft="16dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="16dp"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:text="Sensor Unit"
                    android:textColor="@color/accentColor"
                    android:layout_gravity="bottom" />

                <EditText
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    android:hint="Sensor Unit"
                    android:id="@+id/sensorUnitEditText" />

                <!--<TextView-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:layout_marginLeft="16dp"-->
                    <!--android:layout_marginRight="16dp"-->
                    <!--android:maxLines="1"-->
                    <!--android:singleLine="true"-->
                    <!--android:text="Formula"-->
                    <!--android:textColor="@color/accentColor"-->
                    <!--android:layout_gravity="bottom" />-->

                <!--<EditText-->
                    <!--android:layout_width="fill_parent"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:layout_margin="16dp"-->
                    <!--android:hint="Formula"-->
                    <!--android:id="@+id/sensorFormulaEditText" />-->

            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <com.melnykov.fab.FloatingActionButton
        android:id = "@+id/nextFab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:layout_margin="16dp"
        app:fab_colorNormal="@android:color/holo_orange_light"
        app:fab_colorPressed="@android:color/holo_orange_dark"
        android:src="@drawable/ic_arrow_forward_white_24dp"
        />
    <com.melnykov.fab.FloatingActionButton
        android:id = "@+id/previousFab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|left"
        android:layout_margin="16dp"
        app:fab_colorNormal="@android:color/holo_orange_light"
        app:fab_colorPressed="@android:color/holo_orange_dark"
        android:src="@drawable/ic_arrow_back_white_24dp"
        />


</FrameLayout>
